{#
	@description this script is used to finalise the error template
	@since PM (25.12.2020) 
	@see https://twig.symfony.com/doc/2.x/tags/macro.html
	@see https://learn.getgrav.org/17/themes
#}
{% extends 'partials/base.html.twig' %} {# utils is set here #}

{% block template %}error{% endblock %}
{% block header %}
	<section class="error">
		<div class="center" data-active>
			{#
				@see https://learn.getgrav.org/17/themes/theme-vars#route
				- page.route -> _empty_ if error page
			#}
			{% if page.route %}
				<h1>{{ "error"|tapmorphLabel }}!</h1>
				<h2>{{ page.title }}</h2>
				<button class="btn button button-color" data-scroll-to="#content">{{ "explore"|tapmorphLabel }}</button>
			{% else %}
				<h1>{{ page.title }}</h1>
				<button class="btn button button-color" data-scroll-to="#content">{{ "explore"|tapmorphLabel }}</button>
			{% endif %}
		</div>
	</section>
{% endblock %}
{% block content %}
	{{ tapmorphErrorNote()|raw }}
{% endblock %}